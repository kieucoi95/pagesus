<div{{ attributes }}>
    {{ title_prefix }}
    {{ title_suffix }}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="block_content">
                    <h2 class="title">{{ content['#block_content'].get('field_title').getValue()[0].value }}</h2>
                    <p class="description">{{ content['#block_content'].get('field_description').getValue()[0].value }}</p>
                </div>
            </div>
            <div class="col-lg-4 mt-lg-0 mt-4">
                <div class="about-thumb">
                    <img src="{{ file_url(elements.content['#block_content'].field_image.0.entity.uri.value) }}" alt="{{ elements.content['#block_content'].field_image.0.alt }}">
                </div>
            </div>
        </div>
    </div>
</div>